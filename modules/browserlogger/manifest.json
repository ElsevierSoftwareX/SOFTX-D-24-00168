{
    "manifest_version": 2,
    "name": "BrowserLogger",
    "description": "Log user interactions with the browser",
    "version": "1.0",
    "icons": {
        "64": "icons/icon.png"
    },
    "background": {
        "scripts": [
            "background_script.js",
            "libs/jquery-3.4.1.min.js"
        ],
        "persistent": false
    },
    "content_scripts": [{
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js",
                "libs/jquery-3.4.1.min.js"
            ]
    }],
    "permissions": [
        "tabs",
        "bookmarks",
        "downloads",
        "history",
        "management",
        "notifications",
        "storage",
        "webNavigation"
    ],
    "browser_action": {
        "default_icon": {
            "64": "icons/icon.png"
        },
        "default_popup": "browserAction/index.html",
        "default_title": "BrowserLogger"
    },
    "options_ui": {
        "page": "options/index.html"
    }
}